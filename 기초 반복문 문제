#include <stdio.h>

//1, 2, 3 ... 을 순서대로 계속 더해나갈 때,그 합이 입력한 정수보다 작을 동안만 계속 더하는 문제.
int main()
{
  int x, sum=0; //x는 입력받는 정수, sum은 입력받은 정수의 합
  scanf("%d", &x); //정수 입력받기
      for(int i=1; sum<x; i++)//정수의 합이 입력된 정수보다 커질 때까지 반복
        {
         sum += i;
        }
  printf("%d", sum);//정수의 합 출력
    return 0;
}
